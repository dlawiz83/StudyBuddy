{
  "manifest_version": 3,
  "name": "StarShare",
  "version": "1.0.0",
  "description": "Gamified coding companion (Study Buddy) for online IDEs",
  "action": {
    "default_popup": "index.html",
    "default_title": "StarShare"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "*://*.replit.com/*",
    "*://*.leetcode.com/*",
    "*://colab.research.google.com/*",
    "*://*.codingbat.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.replit.com/*",
        "*://*.leetcode.com/*",
        "*://colab.research.google.com/*",
        "*://*.codingbat.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
